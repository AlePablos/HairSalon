@model Peluqueria3.Models.Appointment

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Appointment</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.User.firstName)
        </dd>

        <dt>
            Start time
        </dt>

        <dd>
            @Html.DisplayFor(model => model.startTime)
        </dd>

        <dt>
            End time
        </dt>

        <dd>
            @Html.DisplayFor(model => model.endTime)
        </dd>

        <dt>
            Work item
        </dt>

        <dd>
            <table class="table">
                <tr>
                    <th>
                        Description
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Duration
                    </th>
                    
                </tr>

                @foreach (var item in ViewBag.workItemList)
                {
                    <tr>
                        <td>
                            @item.name
                        </td>
                        <td>
                           $ @item.price
                        </td>
                        <td>
                            @item.duration min
                        </td>                        
                    </tr>
                }
</dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
