<h1>Control Panel</h1>
<ul>
    <li>
        @Html.ActionLink("Manage Work Item", "Index", "WorkItems", routeValues: null, htmlAttributes: null)
    </li>
    <li>
        @Html.ActionLink("Manage Appointments", "Index", "Appointments", routeValues: null, htmlAttributes: null)
    </li>    
    <li>
        @Html.ActionLink("Manage Users", "Index", "Users", routeValues: null, htmlAttributes: null)
    </li>
    <li>
        @Html.ActionLink("Edit Profile", "Edit", "Users", routeValues: new { id = ViewBag.currentUser.ID }, htmlAttributes: null)
    </li>
</ul>

<h2>Appointment for today</h2>

<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Date
        </th>
        <th>
            Start Time
        </th>
        <th>
            End Time
        </th>
       
        <th></th>
    </tr>
    
    @foreach (var item in ViewBag.ListTodayTask)
    {
        <tr>
            <td>
                @item.User.firstName
            </td>
            <td>
                @item.startTime.DayOfWeek
            </td>
            <td>
                @item.startTime.TimeOfDay
            </td>
            <td>
                @item.endTime.TimeOfDay
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
           
        </tr>
    }

</table>

        



