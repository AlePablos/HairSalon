<h2>Cosas para hoy</h2>

<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Date
        </th>
        <th>
            Start Time
        </th>
        <th>
            End Time
        </th>
       
        <th></th>
    </tr>
    
    @foreach (var item in ViewBag.ListTodayTask)
    {
        <tr>
            <td>
                @item.User.firstName
            </td>
            <td>
                @item.startTime.DayOfWeek
            </td>
            <td>
                @item.startTime.TimeOfDay
            </td>
            <td>
                @item.endTime.TimeOfDay
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
           
        </tr>
    }

</table>

        



